# .editorconfig: Enforces consistent coding styles across the project.

# Top-most EditorConfig file
root = true

# Global settings: Unix-style newlines and UTF-8 encoding
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 88
trim_trailing_whitespace = true

# Configuration file settings (e.g., .editorconfig, .gitignore)
[*.{dockerignore,editorconfig,gitignore}]
trim_trailing_whitespace = false

# Makefile-specific settings
[Makefile]
indent_style = tab

# Dockerfile-specific settings
[Dockerfile]
indent_size = 4
indent_style = space
max_line_length = 120

# Markdown-specific settings
[*.md]
max_line_length = 120

# Java-specific settings
[*.java]
indent_size = 4

# JSON-specific settings
[*.json]
indent_size = 2
indent_style = space

# Text and log files
[*.{txt,log}]
trim_trailing_whitespace = false

# YAML-specific settings
[*.{yml,yaml}]
indent_size = 2
indent_style = space

# XML-specific settings
[*.{xml}]
indent_size = 2
indent_style = space
